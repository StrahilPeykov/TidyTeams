<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="351dp"
            android:layout_height="42dp"
            android:layout_marginTop="68dp"
            android:text="ADMIN PROFILE"
            android:textColor="#215635"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Here you can create or manage events, as well as remove users."
            android:textColor="#8f8e8e"
            android:textSize="16sp"
            android:textStyle="italic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_event_button"
            android:layout_width="match_parent"
            android:backgroundTint="#00B9C4"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:text="CREATE AN EVENT"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/manage_event_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#009182"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:text="MANAGE AN EVENT"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/remove_users_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:text="REMOVE USERS"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
